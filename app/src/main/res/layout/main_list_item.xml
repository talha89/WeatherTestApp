<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin">


    <ImageView
        android:id="@+id/cityWeatherIv"
        android:layout_width="@dimen/list_item_image_size"
        android:layout_height="@dimen/list_item_image_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_input_add" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cityWeatherIv"
        android:orientation="vertical">

    <TextView
        android:id="@+id/cityTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parnu"
        android:textSize="@dimen/list_item_title_size"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/cityTempTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp: 23 degrees"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/cityWeatherTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostly Cloudy"
        android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>

</RelativeLayout>
